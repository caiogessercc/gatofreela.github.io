---
import Briefcase from "phosphor-astro/Briefcase.astro";
import CurrencyDollar from "phosphor-astro/CurrencyDollar.astro";
import Person from "phosphor-astro/Person.astro";

const { cover, avatar, name, role } = Astro.props;
---

<aside class="sidebar">
  <img
    class="cover"
    src="https://images.unsplash.com/photo-1604964432806-254d07c11f32?q=50&w=500&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
  />

  <div class="profile">
    <img class="avatar" src="https://github.com/shadcn.png" />

    <strong>{name}</strong>
    <span>{role}</span>
  </div>
  <footer>
    <a href="/freelancer/[username]">
      <Person style="width: 15px; height: 15px;" />
      Perfil
    </a>
    <a href="/jobs/">
      <Briefcase style="width: 15px; height: 15px;" />
      Trabalhos
    </a>
    <a href="/finances/[username]">
      <CurrencyDollar style="width: 15px; height: 15px;" />
      Finan√ßas
    </a>
  </footer>
</aside>

<style>
  .sidebar {
    background: var(--gray-800);
    border-radius: 8px;
    overflow: hidden;
  }

  .cover {
    width: 100%;
    height: 72px;
    object-fit: cover;
  }

  .profile {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: calc(0px - 1.5rem - 6px);
  }

  .profile strong {
    margin-top: 1rem;
    color: var(--gray-100);
    line-height: 1.6;
  }

  .profile span {
    font-size: 0.875rem;
    color: var(--gray-400);
    line-height: 1.6;
  }

  .avatar {
    /* box-sizing: initial; */
    width: calc(3rem + 12px);
    height: calc(3rem + 12px);
    border-radius: 8px;
    border: 4px solid var(--gray-800);
    outline: 2px solid var(--green-500);
  }

  .sidebar footer {
    border-top: 1px solid var(--gray-600);
    margin-top: 1.5rem;
    padding: 1.5rem 2rem 2rem;
  }

  .sidebar footer a {
    background: transparent;
    color: var(--green-500);
    border: 1px solid var(--green-500);
    border-radius: 8px;
    height: 40px;
    padding: 0 1.5rem;
    margin: 0.5rem auto;
    font-weight: bold;
    display: block;
    text-decoration: none;

    display: flex;
    align-items: center;
    justify-content: center;

    gap: 0.5rem;

    transition:
      color 0.2s,
      background 0.1s;
  }

  .sidebar footer a:hover {
    background: var(--green-500);
    color: var(--white);
  }
</style>
